@{
    ViewBag.Title = "About";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>
    .Content {
        font-size: 14px;
    }

        .Content table {
            border-collapse: collapse;
            width: 100%;
        }

            .Content table td input[type="text"] {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
                text-transform: uppercase;
                font-size: 10px;
            }
</style>
<script>
    function OpenPage(id) {
        switch (id) {
            case 1:
                $("#bkgtbl").removeAttr("hidden");
                $("#Invoice, #Receipt,").attr("hidden", true);
                break;
            case 2:
                
                break;
            default:
                $("#bkgtbl").css("display", "block");
                break;
        }
    }

</script>
